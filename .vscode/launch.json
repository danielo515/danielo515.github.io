    "version": "0.2.0",
    "configurations": [

        {
            "type": "node",
            "request": "launch",
            "name": "Iniciar programa",
            "program": "${workspaceRoot}\\n\\a"
        },
        {
            "type": "node",
            "request": "attach",
            "name": "Asociar al puerto",
            "address": "localhost",
            "port": 5858
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch Chrome",
            "url": "http://localhost:8000",
            "webRoot": "${workspaceRoot}"
        },
        {
            "type": "chrome",
            "request": "attach",
            "name": "Attach Chrome",
            "port": 8000,
            "url": "http://localhost",
            "webRoot": "${workspaceRoot}"
        }
    ]
}