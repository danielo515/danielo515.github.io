---
import Badge from "@/components/Badge.astro";
import LinkedInIcon from "@/components/icons/LinkedIn.astro";
import SocialPill from "@/components/SocialPill.astro";
import GitHub from "@/icons/GitHub.astro";
import StackOverflow from "@/icons/Stackoverflow.astro";

type Props = {
  linkedinUrl: string;
  github: string;
  stackOverflow: string;
  name: string;
  personalImageAlt: string;
};

const { linkedinUrl, github, name, personalImageAlt, stackOverflow } =
  Astro.props;
---

<div class="max-w-xl">
  <div class="flex gap-4 mb-4">
    <a href="/profile">
      <img
        class="rounded-full shadow-lg size-16"
        src="/danielo-1.webp"
        transition:name="avatar"
        alt={personalImageAlt}
      />
    </a>
    <a
      href={linkedinUrl}
      target="_blank"
      rel="noopener"
      class="flex items-center transition md:justify-center md:hover:scale-105"
    >
      <Badge>Available for work</Badge>
    </a>
  </div>
  <h1
    class="text-4xl font-bold tracking-tight text-gray-800 sm:text-5xl dark:text-white"
  >
    Hi, I'm <span class="text-blue-500">{name}</span>
  </h1>
  <p
    class="mt-6 text-xl text-gray-800 dark:[&>strong]:text-yellow-200 [&>strong]:text-yellow-500 [&>strong]:font-semibold dark:text-gray-300"
  >
    <slot />
  </p>
  <nav class="flex flex-wrap gap-4 mt-8 max-sm:justify-center">
    <SocialPill href={github}>
      <GitHub class="size-4" />
      Github
    </SocialPill>
    <SocialPill href={linkedinUrl}>
      <LinkedInIcon class="size-4" />
      LinkedIn
    </SocialPill>
    <SocialPill href={stackOverflow}>
      <StackOverflow class="size-4" />
      StackOverflow
    </SocialPill>
  </nav>
</div>
